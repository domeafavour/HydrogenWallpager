<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="cn.zhj.hydrogenwallpager.view.MainActivity.ImageHandler" />

        <import type="android.view.View" />

        <variable
            name="layoutParams"
            type="cn.zhj.hydrogenwallpager.model.LayoutParamsModel" />

        <variable
            name="imgModel"
            type="cn.zhj.hydrogenwallpager.model.ImageModel" />

        <variable
            name="eventHandler"
            type="ImageHandler" />

        <variable
            name="loadModel"
            type="cn.zhj.hydrogenwallpager.model.LoadModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="点击选择要制作的图片"
            android:onClick="@{eventHandler.onSelectImage}"
            android:visibility="@{loadModel.isFirstLoad ? View.VISIBLE : View.GONE}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                dynamic_height="@{layoutParams.topHeight}"
                dynamic_src="@{imgModel.top}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                dynamic_height="@{layoutParams.bottomHeight}"
                dynamic_src="@{imgModel.bottom}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/color_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="88dp"
            android:visibility="@{loadModel.isFirstLoad ? View.GONE : View.VISIBLE}" />

        <net.i2p.android.ext.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/expanded_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:visibility="@{loadModel.isFirstLoad ? View.GONE : View.VISIBLE}"
            app:fab_labelStyle="@style/menu_labels_style"
            app:fab_labelsPosition="left">

            <net.i2p.android.ext.floatingactionbutton.FloatingActionButton
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{eventHandler::share}"
                app:fab_icon="@drawable/shape_icon_share"
                app:fab_size="mini"
                app:fab_title="分享" />

            <net.i2p.android.ext.floatingactionbutton.FloatingActionButton
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{eventHandler.save}"
                app:fab_icon="@drawable/shape_icon_save"
                app:fab_size="mini"
                app:fab_title="保存" />

            <net.i2p.android.ext.floatingactionbutton.FloatingActionButton
                android:id="@+id/choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{eventHandler.onSelectImage}"
                app:fab_icon="@drawable/shape_icon_album"
                app:fab_size="mini"
                app:fab_title="选择图片" />

            <net.i2p.android.ext.floatingactionbutton.FloatingActionButton
                android:id="@+id/set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{eventHandler.setAsWallpaper}"
                app:fab_icon="@drawable/shape_icon_set"
                app:fab_size="mini"
                app:fab_title="设为壁纸" />
        </net.i2p.android.ext.floatingactionbutton.FloatingActionsMenu>
    </android.support.design.widget.CoordinatorLayout>

</layout>
